{
  "name": "arjith-portfolio",
  "version": "1.0.0",
  "description": "Epic personal portfolio and blog for Arjith Retna Srikanth - A modern, responsive website with cutting-edge features",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 4173",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "lighthouse": "lighthouse http://localhost:4173 --output-path=./lighthouse-results.html --view",
    "analyze": "vite-bundle-analyzer dist",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky install",
    "validate": "npm run lint && npm run format:check && npm run build",
    "deploy": "gh-pages -d dist",
    "start": "npm run dev"
  },
  "keywords": [
    "portfolio",
    "blog",
    "personal-website",
    "responsive",
    "modern-css",
    "javascript",
    "vite",
    "github-pages"
  ],
  "author": "Arjith Retna Srikanth",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.11",
    "lighthouse": "^11.7.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.20.0"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "aos": "^2.3.4",
    "canvas-confetti": "^1.9.3",
    "gsap": "^3.12.2",
    "intersection-observer": "^0.12.2",
    "lenis": "^1.1.5",
    "lucide": "^0.407.0",
    "three": "^0.165.0",
    "typed.js": "^2.1.0",
    "vanilla-tilt": "^1.8.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
