---
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
}

const { 
  title, 
  description, 
  image = "/og-image.jpg", 
  canonical,
  noindex = false 
} = Astro.props;

const siteUrl = 'https://arjith.github.io';
const fullTitle = title === 'Home' ? 'Arjith Retna Srikanth - Engineering Manager at Microsoft (ODSP)' : `${title} | Arjith Retna Srikanth`;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <SEO
      title={fullTitle}
      description={description}
      canonical={canonical || `${siteUrl}${Astro.url.pathname}`}
      openGraph={{
        basic: {
          title: fullTitle,
          type: "website",
          image: `${siteUrl}${image}`,
          url: `${siteUrl}${Astro.url.pathname}`,
        },
        optional: {
          description: description,
          siteName: "Arjith Retna Srikanth",
        }
      }}
      twitter={{
        creator: "@arjithrs",
        site: "@arjithrs",
        card: "summary_large_image",
        title: fullTitle,
        description: description,
        image: `${siteUrl}${image}`,
      }}
      extend={{
        link: [
          { rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
          { rel: "preconnect", href: "https://fonts.googleapis.com" },
          { rel: "preconnect", href: "https://fonts.gstatic.com", crossorigin: true },
          { rel: "preload", href: "https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap", as: "style" },
        ],
        meta: [
          { name: "robots", content: noindex ? "noindex, nofollow" : "index, follow" },
          { name: "googlebot", content: noindex ? "noindex, nofollow" : "index, follow" },
          { name: "theme-color", content: "#121212" },
          { name: "color-scheme", content: "dark light" },
          { name: "author", content: "Arjith Retna Srikanth" },
          { name: "generator", content: Astro.generator },
        ],
      }}
    />

    <!-- Preload critical assets -->
    <link rel="preload" href="/animations/hero-animation.json" as="fetch" crossorigin />
    
    <!-- Analytics -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script>

    <!-- Custom CSS -->
    <style is:global>
      :root {
        --bg-primary: #09090b; /* Deep black (Zinc-950) */
        --bg-secondary: #18181b; /* Zinc-900 */
        --text-primary: #fafafa; /* Zinc-50 */
        --text-secondary: #a1a1aa; /* Zinc-400 */
        --accent: #3b82f6;
        --border-color: rgba(255, 255, 255, 0.1);
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        margin: 0;
        padding: 0;
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* Smooth scrolling for better UX */
      @media (prefers-reduced-motion: no-preference) {
        html {
          scroll-behavior: smooth;
        }
      }

      /* Loading animation */
      .loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--bg-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition: opacity 0.5s ease-out;
      }

      .loading-screen.hidden {
        opacity: 0;
        pointer-events: none;
      }
    </style>
  </head>
  <body class="bg-zinc-950 text-zinc-50 selection:bg-blue-500/30 selection:text-blue-200">
    <!-- Loading Screen -->
    <div id="loading-screen" class="loading-screen bg-[#09090b]">
      <div class="relative">
        <div class="w-16 h-16 border-2 border-zinc-800 border-t-blue-500 rounded-full animate-spin"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-8 h-8 bg-blue-500/20 rounded-full blur-xl animate-pulse"></div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main id="main-content" style="opacity: 0;">
      <slot />
    </main>

    <!-- Loading Script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const loadingScreen = document.getElementById('loading-screen');
        const mainContent = document.getElementById('main-content');
        
        // Hide loading screen and show content
        setTimeout(() => {
          loadingScreen.classList.add('hidden');
          mainContent.style.opacity = '1';
          mainContent.style.transition = 'opacity 0.5s ease-out';
        }, 1500);
        
        // Remove loading screen from DOM after animation
        setTimeout(() => {
          loadingScreen.remove();
        }, 2000);
      });

      // Theme detection
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
  </body>
</html>
