---
import { blogs } from '../data/projects';
---

<section id="blog" class="py-32 relative bg-zinc-950">
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-20 gap-8">
            <div class="max-w-2xl">
                <h2 class="text-xs font-bold tracking-[0.2em] text-blue-500 uppercase mb-4">Writings</h2>
                <h3 class="text-4xl md:text-6xl font-bold text-zinc-100 tracking-tight">
                    Technical <span class="text-zinc-500">Insights</span>
                </h3>
            </div>
            <p class="text-zinc-400 text-lg max-w-md leading-relaxed">
                sharing thoughts on engineering, architecture, and the future of technology.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {blogs.map((blog) => (
                <a href={blog.url} target="_blank" rel="noopener noreferrer" class="group relative bg-zinc-900/40 backdrop-blur-sm border border-zinc-800/50 rounded-2xl p-8 hover:bg-zinc-800/40 transition-all duration-500">
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
                    
                    <div class="relative">
                        <div class="flex items-center justify-between mb-6">
                            <span class="text-xs font-medium text-zinc-500 uppercase tracking-widest">{new Date(blog.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                            <div class="w-8 h-8 rounded-full bg-zinc-950 flex items-center justify-center text-zinc-500 group-hover:text-blue-400 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                            </div>
                        </div>
                        
                        <h4 class="text-xl md:text-2xl font-bold text-zinc-100 mb-4 group-hover:text-blue-400 transition-colors">
                            {blog.title}
                        </h4>
                        
                        <p class="text-zinc-400 text-sm leading-relaxed mb-0">
                            {blog.description}
                        </p>
                    </div>
                </a>
            ))}
        </div>

        <div class="mt-16 text-center">
            <a href="https://medium.com/@itzsrikanth" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-zinc-900 text-zinc-100 font-medium rounded-full border border-zinc-800 transition-all hover:bg-zinc-800 hover:scale-[1.02] active:scale-[0.98]">
                Read more on Medium
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
        </div>
    </div>
</section>
