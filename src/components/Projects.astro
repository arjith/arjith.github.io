---
import { projects } from '../data/projects';
import { Icon } from 'astro-icon'; // Assuming astro-icon might be useful, but I'll stick to SVG for safety

// Sort featured projects first
const sortedProjects = [...projects].sort((a, b) => (a.featured === b.featured ? 0 : a.featured ? -1 : 1));

const getGradient = (id) => {
    const gradients = [
        "from-blue-600 to-indigo-600",
        "from-purple-600 to-pink-600",
        "from-emerald-600 to-teal-600", 
        "from-orange-500 to-red-500",
        "from-cyan-500 to-blue-500",
        "from-fuchsia-600 to-purple-600"
    ];
    return gradients[id % gradients.length];
};
---

<section id="projects" class="py-32 bg-zinc-950 relative overflow-hidden">
    <!-- Ambient Background -->
    <div class="absolute top-[10%] left-[-10%] w-[40%] h-[40%] bg-blue-500/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-[10%] right-[-10%] w-[40%] h-[40%] bg-purple-500/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-20 gap-8">
            <div class="max-w-2xl">
                <h2 class="text-xs font-bold tracking-[0.2em] text-blue-500 uppercase mb-4">Portfolio</h2>
                <h3 class="text-4xl md:text-6xl font-bold text-zinc-100 tracking-tight">
                    Selected Works <span class="text-zinc-500">& Projects</span>
                </h3>
            </div>
            <p class="text-zinc-400 text-lg max-w-md leading-relaxed">
                Exploring the intersection of scalable architecture and intuitive user experiences.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-6 gap-6">
            {sortedProjects.map((project, index) => (
                <article class={`group relative rounded-3xl overflow-hidden bg-zinc-900/50 border border-zinc-800/50 backdrop-blur-sm hover:border-zinc-700/50 transition-all duration-500 flex flex-col ${project.featured ? 'md:col-span-4 h-[450px]' : 'md:col-span-2 h-[450px]'}`}>
                    <!-- Background Gradient Overlays -->
                    <div class={`absolute inset-0 opacity-0 group-hover:opacity-10 transition-opacity duration-700 bg-gradient-to-br ${getGradient(index)}`}></div>
                    
                    <div class="p-8 flex flex-col h-full relative z-10">
                        <div class="flex justify-between items-start mb-6">
                            <span class="px-3 py-1 rounded-full bg-zinc-800/50 text-zinc-400 text-[10px] uppercase tracking-wider border border-zinc-700/50">
                                {project.category}
                            </span>
                            {project.featured && (
                                <div class="flex items-center gap-1.5 text-blue-400">
                                    <span class="w-1.5 h-1.5 rounded-full bg-blue-400 animate-pulse"></span>
                                    <span class="text-[10px] uppercase tracking-widest font-bold">Featured</span>
                                </div>
                            )}
                        </div>

                        <h4 class="text-2xl md:text-3xl font-bold text-zinc-100 mb-4 group-hover:text-blue-400 transition-colors duration-300">
                            {project.title}
                        </h4>
                        
                        <p class="text-zinc-400 text-sm leading-relaxed mb-8 line-clamp-3">
                            {project.description}
                        </p>

                        <div class="flex flex-wrap gap-2 mt-auto mb-8">
                            {project.technologies.slice(0, 4).map((tech) => (
                                <span class="text-[10px] font-medium px-2 py-1 rounded-md bg-zinc-950/50 text-zinc-500 border border-zinc-800/50">
                                    {tech}
                                </span>
                            ))}
                        </div>

                        <div class="flex items-center justify-between pt-6 border-t border-zinc-800/50">
                            <div class="flex gap-4">
                                {project.githubUrl && (
                                    <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-zinc-100 transition-colors">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                                    </a>
                                )}
                                {project.liveUrl && (
                                    <a href={project.liveUrl} target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-zinc-100 transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                    </a>
                                )}
                            </div>
                            <button class="text-xs font-bold text-zinc-100 flex items-center gap-1 group/btn">
                                Details
                                <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                            </button>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>
