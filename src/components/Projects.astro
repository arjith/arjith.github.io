---
import { projects } from '../data/projects';
import { Icon } from 'astro-icon'; // Assuming astro-icon might be useful, but I'll stick to SVG for safety

// Sort featured projects first
const sortedProjects = [...projects].sort((a, b) => (a.featured === b.featured ? 0 : a.featured ? -1 : 1));

const getGradient = (id) => {
    const gradients = [
        "from-blue-600 to-indigo-600",
        "from-purple-600 to-pink-600",
        "from-emerald-600 to-teal-600", 
        "from-orange-500 to-red-500",
        "from-cyan-500 to-blue-500",
        "from-fuchsia-600 to-purple-600"
    ];
    return gradients[id % gradients.length];
};
---

<section id="projects" class="py-32 bg-dark-bg relative overflow-hidden">
    <!-- Background decorations -->
    <div class="absolute top-1/4 right-0 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-[100px] pointer-events-none"></div>
    <div class="absolute bottom-1/4 left-0 w-[500px] h-[500px] bg-purple-500/10 rounded-full blur-[100px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center mb-20">
            <h2 class="text-3xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400 mb-6">
                Featured Projects
            </h2>
            <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                A selection of projects that showcase my passion for building impactful solutions using modern technologies.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedProjects.map((project) => (
                <article class="group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl overflow-hidden hover:shadow-2xl hover:bg-white/10 transition-all duration-300 flex flex-col h-full">
                    <!-- Project Image / Gradient Header -->
                    <div class={`h-48 w-full bg-gradient-to-br ${getGradient(project.id)} relative overflow-hidden group-hover:scale-105 transition-transform duration-500`}>
                        <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
                        {project.featured && (
                            <div class="absolute top-4 right-4 bg-white/20 backdrop-blur-md border border-white/20 text-white text-xs font-bold px-3 py-1 rounded-full">
                                Featured
                            </div>
                        )}
                        <div class="absolute bottom-4 left-4">
                            <h3 class="text-xl font-bold text-white mb-1 group-hover:translate-x-1 transition-transform">{project.title}</h3>
                            <span class="text-sm text-white/80">{project.category}</span>
                        </div>
                    </div>

                    <div class="p-6 flex-1 flex flex-col">
                        <p class="text-gray-400 text-sm leading-relaxed mb-6 flex-1">
                            {project.description}
                        </p>

                        <!-- Tech Stack -->
                        <div class="flex flex-wrap gap-2 mb-6">
                            {project.technologies.slice(0, 4).map((tech) => (
                                <span class="text-xs font-medium px-2 py-1 rounded bg-white/5 text-gray-300 border border-white/5">
                                    {tech}
                                </span>
                            ))}
                            {project.technologies.length > 4 && (
                                <span class="text-xs font-medium px-2 py-1 rounded bg-white/5 text-gray-500">
                                    +{project.technologies.length - 4}
                                </span>
                            )}
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center gap-4 pt-4 border-t border-white/5">
                            {project.githubUrl && (
                                <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" 
                                   class="text-sm font-medium text-white hover:text-blue-400 transition-colors flex items-center gap-2">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                                    Source
                                </a>
                            )}
                            {project.liveUrl && (
                                <a href={project.liveUrl} target="_blank" rel="noopener noreferrer"
                                   class="text-sm font-medium text-white hover:text-blue-400 transition-colors flex items-center gap-2 ml-auto">
                                    Live Demo
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                </a>
                            )}
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>
