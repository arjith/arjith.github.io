---
// Skills Section with animated progress bars
import SkillChart from './react/SkillChart.jsx';
import { skillsData } from '../data/skills.js';
---

<section id="skills" class="py-20 bg-dark-surface/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Skills & <span class="text-primary-400">Expertise</span>
      </h2>
      <p class="text-xl text-dark-muted max-w-3xl mx-auto">
        A comprehensive overview of my technical skills and professional competencies
      </p>
    </div>

    <!-- Skills Categories -->
    <div class="space-y-12">
      {skillsData.categories.map((category, categoryIndex) => (
        <div class="bg-dark-bg/30 backdrop-blur-sm border border-gray-800/50 rounded-2xl p-8">
          <!-- Category Header -->
          <div class="flex items-center mb-8">
            <span class="text-3xl mr-4" role="img" aria-label={category.name}>
              {category.icon}
            </span>
            <div>
              <h3 class="text-2xl font-bold text-white">{category.name}</h3>
              <p class="text-dark-muted">
                {category.skills.length} technologies
              </p>
            </div>
          </div>

          <!-- Skills Grid -->
          <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-6">
            {category.skills.map((skill, skillIndex) => (
              <div class="skill-item bg-dark-surface/50 border border-gray-700/30 rounded-xl p-6 hover:border-primary-500/50 transition-all duration-300 transform hover:scale-105">
                <div class="flex items-center justify-between mb-4">
                  <div>
                    <h4 class="text-lg font-semibold text-white">{skill.name}</h4>
                    <p class="text-sm text-dark-muted">{skill.experience}</p>
                  </div>
                  <div class="text-right">
                    <div class="text-lg font-bold text-primary-400">{skill.level}%</div>
                  </div>
                </div>

                <!-- Animated Progress Bar -->
                <div class="relative">
                  <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                    <div 
                      class="skill-progress h-full rounded-full transition-all duration-1000 ease-out"
                      style={`background: linear-gradient(90deg, ${skill.color}CC, ${skill.color}); width: 0%;`}
                      data-width={skill.level}
                    ></div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Interactive Skills Chart -->
    <div class="mt-16 bg-dark-bg/30 backdrop-blur-sm border border-gray-800/50 rounded-2xl p-8">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-white mb-2">Skills Visualization</h3>
        <p class="text-dark-muted">Interactive chart showing proficiency levels across different categories</p>
      </div>
      
      <SkillChart skillsData={skillsData} client:load />
    </div>

    <!-- Certifications -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold text-white text-center mb-8">
        Professional <span class="text-primary-400">Certifications</span>
      </h3>
      
      <div class="grid md:grid-cols-3 gap-6">
        {skillsData.certifications.map((cert, index) => (
          <div class="bg-dark-bg/50 border border-gray-800/50 rounded-xl p-6 text-center hover:border-primary-500/50 transition-all duration-300 transform hover:scale-105">
            <!-- Certification Badge Placeholder -->
            <div class="w-20 h-20 mx-auto mb-4 bg-primary-500/20 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </div>

            <h4 class="text-lg font-semibold text-white mb-2">{cert.name}</h4>
            <p class="text-primary-400 font-medium mb-1">{cert.issuer}</p>
            <div class="flex justify-center items-center space-x-4 text-sm text-dark-muted">
              <span>{cert.year}</span>
              <span>â€¢</span>
              <span>{cert.credentialId}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tools & Technologies -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-white mb-8">
        Tools & <span class="text-primary-400">Technologies</span>
      </h3>
      
      <div class="flex flex-wrap justify-center gap-3">
        {skillsData.tools.map((tool, index) => (
          <span class="inline-flex items-center px-4 py-2 bg-dark-surface/50 border border-gray-700/30 text-dark-text hover:text-primary-400 hover:border-primary-500/50 rounded-lg text-sm font-medium transition-all duration-300 transform hover:scale-105 cursor-default">
            {tool}
          </span>
        ))}
      </div>
    </div>

    <!-- Experience Summary -->
    <div class="mt-16 grid md:grid-cols-4 gap-8 text-center">
      <div class="bg-dark-bg/30 backdrop-blur-sm border border-gray-800/50 rounded-xl p-6">
        <div class="text-3xl font-bold text-primary-400 mb-2">9+</div>
        <div class="text-dark-muted">Years Experience</div>
      </div>
      
      <div class="bg-dark-bg/30 backdrop-blur-sm border border-gray-800/50 rounded-xl p-6">
        <div class="text-3xl font-bold text-green-400 mb-2">30+</div>
        <div class="text-dark-muted">Technologies</div>
      </div>
      
      <div class="bg-dark-bg/30 backdrop-blur-sm border border-gray-800/50 rounded-xl p-6">
        <div class="text-3xl font-bold text-purple-400 mb-2">50+</div>
        <div class="text-dark-muted">Projects Built</div>
      </div>
      
      <div class="bg-dark-bg/30 backdrop-blur-sm border border-gray-800/50 rounded-xl p-6">
        <div class="text-3xl font-bold text-orange-400 mb-2">3</div>
        <div class="text-dark-muted">Certifications</div>
      </div>
    </div>
  </div>
</section>

<script>
  // Animate progress bars on scroll
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const skillItems = entry.target.querySelectorAll('.skill-item');
          
          skillItems.forEach((item, index) => {
            const progressBar = item.querySelector('.skill-progress');
            const targetWidth = progressBar.dataset.width;
            
            setTimeout(() => {
              progressBar.style.width = targetWidth + '%';
            }, index * 100); // Stagger the animations
          });
          
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe each category section
    const categoryElements = document.querySelectorAll('#skills .bg-dark-bg\\/30');
    categoryElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>
