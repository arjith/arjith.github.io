---
// Projects Section with filtering and modal functionality
import ProjectModal from './react/ProjectModal.jsx';
import { projects, categories } from '../data/projects.js';
---

<section id="projects" class="py-20 bg-dark-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Featured <span class="text-primary-400">Projects</span>
      </h2>
      <p class="text-xl text-dark-muted max-w-3xl mx-auto mb-8">
        Showcasing innovative solutions that scale systems and enhance user experiences
      </p>
      
      <!-- Project Stats -->
      <div class="flex justify-center space-x-8 mb-8">
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-400">50+</div>
          <div class="text-sm text-dark-muted">Projects Built</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-green-400">10M+</div>
          <div class="text-sm text-dark-muted">Users Served</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-400">20+</div>
          <div class="text-sm text-dark-muted">Technologies</div>
        </div>
      </div>
    </div>

    <!-- Category Filter -->
    <div class="flex flex-wrap justify-center gap-2 mb-12">
      {categories.map(category => (
        <button 
          data-category={category}
          class={`category-filter px-4 py-2 rounded-full border transition-all duration-300 text-sm font-medium ${
            category === 'All' 
              ? 'bg-primary-600 border-primary-600 text-white' 
              : 'bg-transparent border-gray-600 text-dark-muted hover:border-primary-500 hover:text-primary-400'
          }`}
        >
          {category}
        </button>
      ))}
    </div>

    <!-- Projects Grid -->
    <div id="projects-grid" class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
      {projects.map(project => (
        <div 
          data-category={project.category}
          class="project-card bg-dark-surface/50 rounded-2xl overflow-hidden border border-gray-800/50 hover:border-primary-500/50 transition-all duration-500 transform hover:scale-105 hover:shadow-xl hover:shadow-primary-500/10 group cursor-pointer"
          data-project-id={project.id}
        >
          <!-- Project Image -->
          <div class="relative h-48 bg-gradient-to-br from-primary-900/30 via-purple-900/20 to-pink-900/30 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-dark-surface via-transparent to-transparent z-10"></div>
            
            {/* Placeholder for project image */}
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-16 h-16 mx-auto text-primary-400/50 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                <p class="text-xs text-dark-muted">Project Screenshot</p>
              </div>
            </div>

            {project.featured && (
              <div class="absolute top-4 left-4 z-20">
                <span class="inline-flex items-center px-2 py-1 bg-primary-600 text-white text-xs font-semibold rounded-full">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  Featured
                </span>
              </div>
            )}

            <div class="absolute top-4 right-4 z-20">
              <span class={`inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full ${
                project.status === 'Completed' 
                  ? 'bg-green-900/50 text-green-300 border border-green-700/50'
                  : project.status === 'In Production'
                  ? 'bg-blue-900/50 text-blue-300 border border-blue-700/50'
                  : 'bg-yellow-900/50 text-yellow-300 border border-yellow-700/50'
              }`}>
                {project.status}
              </span>
            </div>
          </div>

          <!-- Project Content -->
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-bold text-white group-hover:text-primary-400 transition-colors">
                {project.title}
              </h3>
              <span class="text-sm text-dark-muted">{project.year}</span>
            </div>

            <p class="text-dark-muted text-sm leading-relaxed mb-4 line-clamp-3">
              {project.description}
            </p>

            <!-- Technology Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.slice(0, 3).map(tech => (
                <span class="inline-flex items-center px-2 py-1 bg-primary-900/30 text-primary-300 text-xs rounded-md border border-primary-700/30">
                  {tech}
                </span>
              ))}
              {project.technologies.length > 3 && (
                <span class="inline-flex items-center px-2 py-1 bg-gray-800 text-dark-muted text-xs rounded-md">
                  +{project.technologies.length - 3} more
                </span>
              )}
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between items-center pt-2">
              <div class="flex space-x-2">
                {project.githubUrl && (
                  <a 
                    href={project.githubUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-dark-muted hover:text-primary-400 transition-colors"
                    onClick={(e) => e.stopPropagation()}
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                )}
                
                {project.liveUrl && (
                  <a 
                    href={project.liveUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-dark-muted hover:text-primary-400 transition-colors"
                    onClick={(e) => e.stopPropagation()}
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </a>
                )}
              </div>

              <button class="view-project-btn text-sm text-primary-400 hover:text-primary-300 font-medium transition-colors">
                View Details â†’
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Load More Button -->
    <div class="text-center mt-12">
      <button class="inline-flex items-center px-8 py-4 bg-transparent border-2 border-primary-500 text-primary-400 hover:bg-primary-500 hover:text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        View All Projects
      </button>
    </div>
  </div>

  <!-- Project Modal -->
  <ProjectModal client:load />
</section>

<script define:vars={{ projects }}>
  // Category filtering
  document.addEventListener('DOMContentLoaded', function() {
    const categoryFilters = document.querySelectorAll('.category-filter');
    const projectCards = document.querySelectorAll('.project-card');

    categoryFilters.forEach(filter => {
      filter.addEventListener('click', function() {
        const selectedCategory = this.dataset.category;

        // Update active filter
        categoryFilters.forEach(f => {
          f.classList.remove('bg-primary-600', 'border-primary-600', 'text-white');
          f.classList.add('bg-transparent', 'border-gray-600', 'text-dark-muted');
        });
        this.classList.add('bg-primary-600', 'border-primary-600', 'text-white');
        this.classList.remove('bg-transparent', 'border-gray-600', 'text-dark-muted');

        // Filter projects
        projectCards.forEach(card => {
          const projectCategory = card.dataset.category;
          if (selectedCategory === 'All' || projectCategory === selectedCategory) {
            card.style.display = 'block';
            setTimeout(() => {
              card.style.opacity = '1';
              card.style.transform = 'scale(1)';
            }, 50);
          } else {
            card.style.opacity = '0';
            card.style.transform = 'scale(0.9)';
            setTimeout(() => {
              card.style.display = 'none';
            }, 300);
          }
        });
      });
    });

    // Project modal functionality
    const projectCards = document.querySelectorAll('.project-card');
    projectCards.forEach(card => {
      card.addEventListener('click', function(e) {
        if (e.target.closest('a')) return; // Don't open modal if clicking on links
        
        const projectId = parseInt(this.dataset.projectId);
        const project = projects.find(p => p.id === projectId);
        
        if (project) {
          // Dispatch custom event to open modal
          window.dispatchEvent(new CustomEvent('openProjectModal', { 
            detail: { project } 
          }));
        }
      });
    });
  });
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
