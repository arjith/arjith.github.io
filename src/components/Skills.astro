---
import { skillsData } from '../data/skills';

const { categories } = skillsData;
---

<section id="skills" class="py-32 relative bg-dark-bg">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-20 animate-force-hidden">
            <h2 class="text-3xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400 mb-6">
                Technical Mastery
            </h2>
            <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                A comprehensive overview of my technical expertise and the technologies I use to build scalable solutions.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {categories.map((category) => (
                <div class="group relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl opacity-0 group-hover:opacity-20 transition duration-500 blur"></div>
                    
                    <div class="relative flex items-center gap-4 mb-8">
                        <span class="text-4xl">{category.icon}</span>
                        <h3 class="text-xl font-bold text-white">{category.name}</h3>
                    </div>

                    <div class="flex flex-wrap gap-3">
                        {category.skills.map((skill) => (
                            <div class="relative">
                                <div class="px-4 py-2 rounded-lg bg-dark-bg border border-white/10 flex items-center gap-2 group/skill hover:border-white/30 transition-colors">
                                    <div class="w-2 h-2 rounded-full" style={`background-color: ${skill.color}`}></div>
                                    <span class="text-sm font-medium text-gray-300 group-hover/skill:text-white transition-colors">
                                        {skill.name}
                                    </span>
                                </div>
                                <!-- Tooltip for level/experience could go here -->
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
