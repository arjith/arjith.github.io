---
import { skillsData } from '../data/skills';

const { categories } = skillsData;
---

<section id="skills" class="py-32 relative bg-zinc-950">
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-20 gap-8">
            <div class="max-w-2xl">
                <h2 class="text-xs font-bold tracking-[0.2em] text-blue-500 uppercase mb-4">Expertise</h2>
                <h3 class="text-4xl md:text-6xl font-bold text-zinc-100 tracking-tight">
                    Technical <span class="text-zinc-500">Mastery</span>
                </h3>
            </div>
            <p class="text-zinc-400 text-lg max-w-md leading-relaxed">
                A comprehensive overview of my technical expertise and the technologies I use to build scalable solutions.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {categories.map((category) => (
                <div class="group relative bg-zinc-900/40 backdrop-blur-sm border border-zinc-800/50 rounded-2xl p-8 hover:bg-zinc-800/40 transition-all duration-500">
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
                    
                    <div class="relative flex items-center gap-4 mb-8">
                        <div class="w-12 h-12 rounded-xl bg-zinc-950 flex items-center justify-center text-2xl border border-zinc-800/50 group-hover:scale-110 transition-transform duration-500">
                            {category.icon}
                        </div>
                        <h3 class="text-lg font-bold text-zinc-100 tracking-tight">{category.name}</h3>
                    </div>

                    <div class="relative flex flex-wrap gap-2.5">
                        {category.skills.map((skill) => (
                            <div class="px-3 py-1.5 rounded-lg bg-zinc-950/50 border border-zinc-800/50 flex items-center gap-2 group/skill hover:border-zinc-700/50 transition-colors">
                                <div class="w-1.5 h-1.5 rounded-full" style={`background-color: ${skill.color}`}></div>
                                <span class="text-xs font-medium text-zinc-400 group-hover/skill:text-zinc-200 transition-colors">
                                    {skill.name}
                                </span>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
